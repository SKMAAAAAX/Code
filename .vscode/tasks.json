{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc.exe 生成活动文件",
            "command": "powershell",
            "args": [
                "-Command",
                "mkdir -Force ${fileDirname}\\bin; C:/MinGW/mingw64/bin/gcc.exe -fdiagnostics-color=always -g ${file} -o ${fileDirname}\\bin\\${fileBasenameNoExtension}.exe -ID:/Code/include"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "运行编译后的程序",
            "command": "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe",
            "dependsOn": "C/C++: gcc.exe 生成活动文件",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "一键编译并运行",
            "dependsOn": [
                "C/C++: gcc.exe 生成活动文件",
                "运行编译后的程序"
            ],
            "problemMatcher": []
        }
    ]
}